<%= form_for(package, url: (package.new_record? ? packages_path : package_path(@package)), :html => { :multipart => true, :role => "form" }) do |f| %>
<% if @package.errors.any? %>
<% @package.errors.full_messages.each do |message| %>
<div class="alert <%= bootstrap_class_for :error %>" role="alert">
  <a href="#" data-dismiss="alert" class="close">Ã—</a>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="row">
  <div class=" col-4">
    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :archive %>
      <%= f.file_field :archive, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= f.submit "Cancel", class: "btn btn-secondary", name: "cancel_button" %>
    </div>
  </div>
</div>
<% end %>