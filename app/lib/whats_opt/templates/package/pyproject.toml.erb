[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[project]
name = "<%= @mda.py_modulename %>"
version = "0.1.0"
authors = [
    {name = "<%= @mda.owner.name_from_email %>", email = "<%= @mda.owner.email %>"},
]
description = "Package <%= @mda.name %> Analysis"
readme = "README.md"
requires-python = ">=3.7"
classifiers = [
    "Programming Language :: Python :: 3",
]
dependencies = ["<%= @framework %>"]

# Flat layout just include analysis module
[tool.setuptools.packages.find]
where = ["."]
include = ["<%= @mda.py_modulename %>"] 
namespaces = false