[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[project]
name = "<%= @impl.py_modulename %>"
version = "0.1.0"
authors = [
    {name = "<%= @mda.owner.name_from_email %>", email = "<%= @mda.owner.email %>"},
]
description = "Package <%= @mda.name %> Analysis"
readme = "README.md"
requires-python = ">=3.9"
classifiers = [
    "Programming Language :: Python :: 3",
]
dependencies = ["<%= @framework %>"]

[tool.setuptools]
packages = [
    "<%= @impl.py_modulename -%>",
<%- @mda.sub_analyses.each do |sub_mda| -%>
    "<%= @pkg_prefix %><%= sub_mda.impl.py_modulename -%>",
<%- end -%>
]